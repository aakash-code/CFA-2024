# Claude Hybrid Router - Environment Configuration
# Copy this file to .env and fill in your API keys

# =================
# Ollama Configuration (Local - FREE)
# =================
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_ENABLED=true

# =================
# OpenRouter Configuration (Cloud - Free Tier Available)
# =================
# Get your free API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_ENABLED=true

# =================
# Anthropic Claude Configuration (Premium - Pay per use)
# =================
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_ENABLED=true

# =================
# Router Settings
# =================
# Port for the router proxy server
ROUTER_PORT=3000
ROUTER_HOST=localhost

# Routing preferences
USE_LOCAL_FIRST=true
MAX_LOCAL_CONTEXT_TOKENS=8000
FALLBACK_TO_CLOUD=true
ENABLE_COST_OPTIMIZATION=true

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info
TRACK_COSTS=true
TRACK_PERFORMANCE=true

# =================
# Cost Limits (Optional)
# =================
# Maximum daily spend on API calls (in USD)
MAX_DAILY_API_COST=5.00
# Alert when approaching limit (percentage)
COST_ALERT_THRESHOLD=0.8

# =================
# Performance Tuning
# =================
# Timeout for local models (ms)
OLLAMA_TIMEOUT=30000
# Timeout for cloud APIs (ms)
CLOUD_TIMEOUT=60000
# Number of retries on failure
MAX_RETRIES=3
